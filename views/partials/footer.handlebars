<div class="title-bar" data-responsive-toggle="main-menu" data-hide-for="medium">
    <button class="menu-icon" type="button" data-toggle="main-menu"></button>
    <div class="title-bar-title">Menu</div> 
</div>

<div class="bottom-bar" id="main-menu">
    <div class="bottom-bar-left">
        <ul class="dropdown menu" data-responsive-menu="drilldown medium-dropdown">
                {{#if login}}
                    <li class="menu-text">{{# if user.picture}} <img src="/{{user.picture}}" class="profile-img"> {{else}} Greetings {{user.fname}} {{/if}}</li>  
               {{else}}
                    <li class="menu-text">Welcome</li>                        
                {{/if}}
            <li>
                <a href="/">Browse</a>
                <ul class="menu vertical">
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="bottom-bar-right">
            <ul class=" dropdown menu logout">
                {{#if login}}
                    <li><a href="/user/logout">Sign-Out</a></li>
                    <li><a href="/user/profile">Profile</a></li>
                    <li>
                        <a href="#">
                            <div id="searcher" class="panel-collapse collapse clearfix">
                                <form method="post" action="/search-for-item">
                                    <div class="row">
                                        <input class="input-group-field small-6 columns" type="text" name="keyword" placeholder="Search" required>
                                        <button class="button small-3 columns">Search</button>
                                    </div>
                                </form>
                            </div>
                        </a>
                    </li>
                {{else}}    
                    <li><a href="/user/signin">Sign-In</a></li>
                    <li><a href="/user/signup">Register</a></li>
                {{/if}}
            </ul>
    </div>
</div>

